== Structure ==

opinion_key = {
	decaying = yes 					# Decays towards 0
	delay_days/months/years = int 	# How long does it take before it starts to decay? Only use if decaying = yes
	days/months/years = int			# How long does it last? Optional
	monthly_change = fixed			# How much does it change towards 0 each month? Should be a positive number

	growing = yes 					# Starts at 0/min and grows for its duration (if set) or until it hits its value. Needs either a duration or its value
	stacking = yes 					# Applying it more than once increases its effect rather than just resetting its duration
	min = int 						# Can't be lower than this value
	max = int 						# Can't be higher than this value

	# Punishment reasons
	imprisonment_reason = yes
	banish_reason = yes
	execute_reason = yes
	revoke_title_reason = yes
	divorce_reason = yes

	# Mechanical effects
	disable_non_aggression_pacts = yes
	non_aggression_pact = yes
	obedient = yes
	non_interference = yes
}

